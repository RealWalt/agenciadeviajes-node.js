.row.proximo-viajes
    each viaje in viajes
        .col-md-6.col-lg-4.mb-4
            .card 
                img.card-img-top(src=`img/destinos_${viaje.imagen}.jpg`, alt="imagen destinos")
                .card-body
                    h2= viaje.titulo
                    p 
                        svg(xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewbox='0 0 24 24' fill='none' stroke='#ff2d55' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round')
                            path(d='M10.5 21h-4.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v3')
                            path(d='M16 3v4')
                            path(d='M8 3v4')
                            path(d='M4 11h10')
                            path(d='M18 18m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0')
                            path(d='M18 16.5v1.5l.5 .5')
                        | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}
                    p 
                        svg(xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewbox='0 0 24 24' fill='none' stroke='#ff2d55' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round')
                            path(d='M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0')
                            path(d='M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')

                        | #{viaje.disponibles} Disponibles

                    p= viaje.descripcion.substr(0, 100) + '...'

                    a.btn.btn-success.btn-block(href=`viajes/${viaje.slug}`) Mas informacion